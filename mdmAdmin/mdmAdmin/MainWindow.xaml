<Window x:Class="mdmAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Admin" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- BAL: user lista -->
        <DataGrid x:Name="UserGrid"
                  AutoGenerateColumns="True"
                  Grid.Column="0"
                  SelectionChanged="UserGrid_SelectionChanged"/>

        <!-- JOBB: szerkesztő panel -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Username"/>
            <TextBox x:Name="UsernameBox" Margin="0 0 0 10"/>

            <TextBlock Text="Password"/>
            <TextBox x:Name="PasswordBox" Margin="0 0 0 10"/>

            <Button Content="Hozzáadás" Height="35" Margin="0 5"
                    Click="Add_Click"/>
            <Button Content="Módosítás" Height="35" Margin="0 5"
                    Click="Update_Click"/>
            <Button Content="Törlés" Height="35" Margin="0 5"
                    Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
